SUCMD=""
INSTDIR="/opt/local"
CONFIG=NO
while [[ $# -gt 0 ]]; do
  case $1 in
    -p|--path)
      INSTDIR="$2"
      shift # past argument
      shift # past value
      ;;
    -s|--sudo)
      SUCMD="sudo "
      shift # past argument
      ;;
    -c|--config)
      CONFIG=YES
      shift # past argument
      ;;
    *)
      echo "Unknown option: $1"
      exit 1
      ;;
  esac
done

# create dir if not existing, get abs-path
${SUCMD}mkdir -p ${INSTDIR}
CURDIR=$(pwd)
cd ${INSTDIR}
INSTDIR=$(pwd)
cd ${CURDIR}

# temporary directory for dependency sources
rm -rf _tmp_mhm_deps
mkdir -p _tmp_mhm_deps && cd _tmp_mhm_deps

## ZLIB
git clone https://github.com/zlib-ng/zlib-ng.git
cd zlib-ng
git checkout 2.0.6 # or the version you want
./configure --prefix=${INSTDIR} --zlib-compat
make -j
${SUCMD}make install
cd ..

## HDF5
git clone https://github.com/HDFGroup/hdf5.git
cd hdf5
git checkout hdf5-1_12_2 # or the version you want
./configure --disable-tests --disable-tools --with-zlib=${INSTDIR} --prefix=${INSTDIR} --enable-hl
make -j
${SUCMD}make install
cd ..

## NetCDF-C
git clone https://github.com/Unidata/netcdf-c.git
cd netcdf-c
git checkout v4.9.0 # or the version you want
CPPFLAGS=-I${INSTDIR}/include LDFLAGS=-L${INSTDIR}/lib ./configure --prefix=${INSTDIR} --disable-dap
make -j
${SUCMD}make install
cd ..

## NetCDF-Fortran
git clone https://github.com/Unidata/netcdf-fortran.git
cd netcdf-fortran
git checkout v4.6.0 # or the version you want
LD_LIBRARY_PATH=${INSTDIR}/lib:${LD_LIBRARY_PATH} CPPFLAGS=-I${INSTDIR}/include LDFLAGS=-L${INSTDIR}/lib ./configure --prefix=${INSTDIR}
make -j
${SUCMD}make install
cd ..

# remove temporary directory
cd .. && rm -rf _tmp_mhm_deps

# call ldconfig if needed
if [ "${CONFIG}" = "YES" ]; then
  ${SUCMD}ldconfig
fi
